# 设备架构
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_xiaomi_mi-router-4a-gigabit=y

# 系统精简
CONFIG_PACKAGE_ip-tiny=y
# CONFIG_PACKAGE_ip-full is not set
# CONFIG_PACKAGE_coreutils is not set

# IPv6 支持
CONFIG_PACKAGE_ipv6helper=y
CONFIG_PACKAGE_ip6tables=y
CONFIG_PACKAGE_kmod-ipt-nat6=y
CONFIG_PACKAGE_kmod-nf-nat6=y
CONFIG_PACKAGE_kmod-sit=y
CONFIG_PACKAGE_luci-proto-ipv6=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y
CONFIG_PACKAGE_6in4=y

# 拨号支持（PPPoE + L2TP）
CONFIG_PACKAGE_luci-proto-ppp=y
CONFIG_PACKAGE_ppp=y
CONFIG_PACKAGE_luci-proto-l2tp=y
CONFIG_PACKAGE_ppp-mod-pppol2tp=y

# DNS 加速
CONFIG_PACKAGE_luci-app-smartdns=y
CONFIG_PACKAGE_smartdns=y

# 广告过滤
CONFIG_PACKAGE_luci-app-adguardhome=y

# 科学上网（OpenClash）
CONFIG_PACKAGE_luci-app-openclash=y

# 网络加速
CONFIG_PACKAGE_dnsforwarder=y
CONFIG_PACKAGE_TURBOACC_INCLUDE_DNSFORWARDER=y

# 多拨支持（可选开启）
CONFIG_PACKAGE_mwan3=y
CONFIG_PACKAGE_luci-app-mwan3=y
CONFIG_PACKAGE_luci-app-syncdial=y
CONFIG_PACKAGE_luci-i18n-mwan3-zh-cn=y

# UI 美化与本地化
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-theme-material=y

# 其他常用库（轻量）
CONFIG_PACKAGE_libstdcpp=y
CONFIG_PACKAGE_libminiupnpc=y
CONFIG_PACKAGE_libnatpmp=y
CONFIG_PACKAGE_kmod-tun=y

# 禁用不必要的 SSR/Xray/ZeroTier 等模块
# CONFIG_PACKAGE_luci-app-ssr-plus is not set
# CONFIG_PACKAGE_xray-core is not set
# CONFIG_PACKAGE_zerotier is not set
# CONFIG_PACKAGE_luci-app-zerotier is not set
# CONFIG_PACKAGE_vsftpd-alt is not set
